            <h1>RENISHA GROUPS</h1>
            <h2>Renisha Savings Scheme</h2><br>
            <p>4/780c Renisha Groups, Krishnagiri – 635203</p>
        </div>
        <div class="doc-line">
            <span class="doc-no">
                <%= documentNo %>
            </span>
            <span class="doc-title">Investment Deed</span>
        </div>

        <!-- INVESTOR & NOMINEE -->
        <table class="info-table">
            <tr>
                <!-- INVESTOR -->
