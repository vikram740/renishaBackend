                </td> -->
                <td class="person-cell">
                    <div class="person-box">
                        <% if (investorPhoto) { %>
                            <img src="<%- investorPhoto %>" class="photo" />
                            <% } %>

                                <div class="person-details">
                                    <p><b>Mr. <%= investorName %></b></p>
                                    <p><b>Aadhaar : <%= investorAadhaar %></b></p>
                                    <p><b>Address : <%= investorAddress %></b></p>
                                </div>
                    </div>
                </td>


                <!-- NOMINEE -->
                <!-- <td class="person-cell">
                    <% if (nomineePhoto) { %>
                        <% if (nomineePhoto) { %>
                            <img src="<%- nomineePhoto %>" class="photo" style="width:90px;height:110px;" />
                            <% } %>

                                <% } %>

                                    <p><b>Mrs. <%= nomineeName %></b></p>
